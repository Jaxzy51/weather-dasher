{
"compilerOptions": {
  "rootDir": "src",
  "outDir": "dist",
  "module": "ESNext",
  "moduleResolution": "node",
  "target": "ESNext",
  "esModuleInterop": true,
  "resolveJsonModule": true,
  "allowJs": true,
  "noEmitOnError": true,
  "preserveSymlinks": true
},
"include": ["src"],
"exclude": ["node_modules", "dist"]
}